<%= simple_form_for(@entry, url: diary_entry_path(@entry), method: :patch) do |p| %>
  <%= render partial: 'form', locals: {f: p}  %>
  <div class='buttons'>
    <%= link_to 'Delete', @entry, method: :delete,
      data: { confirmation_message: 'Are you sure you want to delete this entry?' },
      class: 'warning command-button confirmation' %>
    <%= link_to 'Cancel', diary_entry_path(@entry), class: 'command-button' %>
    <%= p.button :submit, 'Save', class: 'command-button' %>
  </div>
<% end %>
